<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:id="@+id/container_view">

        <!--  image  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Image:" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <ImageView
                    android:id="@+id/iv_choose_image"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="null"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_example" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <Button
                        android:id="@+id/btn_get_capture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Get image capture" />

                    <Button
                        android:id="@+id/btn_choose_galery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose an galery"
                        android:layout_below="@id/btn_get_capture"
                        android:layout_centerHorizontal="true"/>

                    <Button
                        android:id="@+id/btn_choose_galery_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Photo"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone"/>
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <!--  code product  -->
           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/outlinedTextFieldCodeProduct"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="code product"
               android:layout_marginEnd="8dp"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/et_code_product"
                   android:layout_width="100dp"
                   android:layout_height="wrap_content"
                   android:inputType="text"/>

           </com.google.android.material.textfield.TextInputLayout>

           <!--  Name  -->
           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/outlinedTextFieldNameProduct"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="name product"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/et_name_product"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:inputType="text" />

           </com.google.android.material.textfield.TextInputLayout>
       </LinearLayout>

        <!--  Qty  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldQtyProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="quantity product"
            android:enabled="false"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_qty_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="0"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!--  category  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldCategoryProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="category product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_category_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  Sub Category  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldSubCategoryProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="sub category product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_sub_category_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  Spec  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldSpecProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="specification product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_spec_product"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="top"
                android:inputType="text|textMultiLine" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  Price  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldPriceProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="price product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_price_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  Location  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLocationProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="location product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_location_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  Status  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldStatusProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="status product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_status_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  Model  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldModelProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="model product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_model_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  code_oracle  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLotProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="lot product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_lot_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--  Desc Oracle  -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldExpProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="exp product"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_exp_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submit_button_add_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Submit"
                android:layout_marginTop="16dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>
        </RelativeLayout>



    </LinearLayout>

</ScrollView>