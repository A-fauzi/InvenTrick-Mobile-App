<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/view_start_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/view_start"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/example_user"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/view_start_arrow_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="5dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_toEndOf="@id/view_start_container"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_status_activity_user"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:cardCornerRadius="50dp"/>

        <TextView
            android:id="@+id/tv_status_activity_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="online"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter_semibold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/inter_bold"
        android:text="My Application" />

    <ImageView
        android:id="@+id/view_end"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_more_vert_24" />
</RelativeLayout>